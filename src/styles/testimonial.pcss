.testimonial {
  display: flex;
  justify-content: center;
  padding: calc(var(--padding) * 3) var(--padding);
  background: linear-gradient(0deg, rgba(0, 0, 0, 1) 0%, rgba(0, 0, 0, 0) 100%),
    url("/testimonial.png");
  background-position: center;
  background-size: cover;
  text-align: center;

  > div {
    max-width: 940px;
  }

  h2 {
    font-size: 1.5rem;
    margin: 0;
    font-weight: 500;
    color: var(--color);
    text-shadow: 0 0 50px rgba(99, 53, 71, 0.4);
    &::-moz-selection {
      color: var(--black);
    }

    &::selection {
      color: var(--black);
    }
  }

  img {
    margin-top: 0.5rem;
  }

  @media only screen and (min-width: $br-xs) {
    h2 {
      font-size: 1.5rem;
    }
  }

  @media only screen and (min-width: $br-sm) {
    h2 {
      font-size: 2.8rem;
    }
  }

  @media only screen and (min-width: $br-lg) {
    > div {
      width: calc(66%);
    }
  }
}
